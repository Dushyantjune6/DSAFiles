import java.util.*;
public class FindNumberOfBitsInANumber
{
    public static int findNumberOfBits(int number, int base){
        
         return (int) (Math.log(number)/Math.log(base)) +1;
    }
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the base and terms: ");
        int base = sc.nextInt();
        int term = sc.nextInt();
        System.out.println(findNumberOfBits(term, base));
    }
}
